generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String    @id @default(cuid())
  email                 String    @unique
  passwordHash          String
  firstName             String?
  lastName              String?
  stripeCustomerId      String?   @unique
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  enrollments              Enrollment[]
  submissions              Submission[]
  notifications            Notification[]
  canCreateCourses         Boolean                  @default(false)
  deleted                  Boolean                  @default(false)
  canvasAssignmentLaunches CanvasAssignmentLaunch[]
}

model Course {
  id                String  @id @default(cuid())
  name              String
  abbr              String
  studentInviteCode String? @unique
  taInviteCode      String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  enrollments       Enrollment[]
  canvasIntegration CanvasIntegration?
  assignments       Assignment[]
  deleted           Boolean            @default(false)

  billingScheme BillingScheme
}

enum BillingScheme {
  PER_STUDENT
  PER_COURSE
}

model CanvasIntegration {
  id              String    @id @default(cuid())
  courseId        String    @unique
  course          Course    @relation(fields: [courseId], references: [id])
  instanceUrl     String
  canvasCourseId  String?
  canvasAccountId String?
  clientId        String
  clientSecret    String
  accessToken     String?
  refreshToken    String?
  tokenExpiresAt  DateTime?
  ltiDeploymentId String?
  ltiIssuer       String?
  developerKey    String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Enrollment {
  id       String @id @default(cuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  courseId String
  course   Course @relation(fields: [courseId], references: [id])

  type EnrollmentType

  canvasUserId          String?
  canvasUserIdUpdatedAt DateTime?

  createdAt                 DateTime  @default(now())
  updatedAt                 DateTime  @updatedAt
  deleted                   Boolean   @default(false)
  billingFollowUpResolvedAt DateTime?

  @@index([courseId, canvasUserId])
}

enum EnrollmentType {
  STUDENT
  TEACHER
  TA
}

model CanvasEntitlementMismatch {
  id                 String   @id @default(cuid())
  assignmentId       String
  courseId           String
  featureBenchUserId String
  reasons            String[]
  context            Json?
  notified           Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([assignmentId, featureBenchUserId])
}

model Assignment {
  id          String  @id @default(cuid())
  name        String
  description String?

  courseId String?
  course   Course? @relation(fields: [courseId], references: [id])

  unitSystem      String
  pointsPossible  Int
  gradeVisibility GradeVisibility

  volume           Float
  surfaceArea      Float
  tolerancePercent Float

  dueDate DateTime?

  submissions Submission[]
  signatures  AssignmentSignature[]

  createdAt                DateTime                 @default(now())
  updatedAt                DateTime                 @updatedAt
  deleted                  Boolean                  @default(false)
  canvasAssignmentLaunches CanvasAssignmentLaunch[]
}

enum GradeVisibility {
  INSTANT
  ON_DUE_DATE
}

enum AssignmentSignatureType {
  CORRECT
  INCORRECT
}

model Submission {
  id           String     @id @default(cuid())
  userId       String
  user         User       @relation(fields: [userId], references: [id])
  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id])

  volume        Float?
  surfaceArea   Float?
  fileKey       String?
  fileUrl       String?
  fileName      String?
  screenshotKey String?
  screenshotUrl String?

  grade               Float?
  feedback            String?
  matchingSignatureId String?
  matchingSignature   AssignmentSignature? @relation(fields: [matchingSignatureId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deleted   Boolean  @default(false)
}

model AssignmentSignature {
  id           String     @id @default(cuid())
  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id])

  sortOrder     Int
  type          AssignmentSignatureType
  unitSystem    String
  volume        Float
  surfaceArea   Float
  centerOfMassX Float?
  centerOfMassY Float?
  centerOfMassZ Float?
  screenshotB64 String?
  feedback      String?
  pointsAwarded Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deleted   Boolean  @default(false)

  submissions Submission[]

  @@unique([assignmentId, sortOrder])
}

model CanvasAssignmentLaunch {
  id                      String     @id @default(cuid())
  token                   String?    @unique
  assignmentId            String
  assignment              Assignment @relation(fields: [assignmentId], references: [id])
  courseId                String
  userId                  String?
  user                    User?      @relation(fields: [userId], references: [id])
  canvasConsumerKey       String?
  canvasUserId            String?
  canvasCourseId          String?
  canvasRoles             String?
  canvasExtRoles          String?
  canvasRoleCategory      String?
  canvasResultSourcedId   String?
  canvasOutcomeServiceUrl String?
  canvasReturnUrl         String?
  expiresAt               DateTime
  consumedAt              DateTime?
  createdAt               DateTime   @default(now())
  updatedAt               DateTime   @updatedAt

  @@index([assignmentId, userId])
  @@index([assignmentId, canvasUserId])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id])
  type      NotificationType
  title     String
  content   String
  data      Json?
  readAt    DateTime?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  deleted   Boolean          @default(false)
}

enum NotificationType {
  ASSIGNMENT_GRADED
  ASSIGNMENT_POSTED
  PAYMENT_ISSUE
  OTHER
}
